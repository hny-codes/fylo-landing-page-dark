---
import { Image } from 'astro:assets';
import HeroImage from '../images/illustration-intro.png';
import BgTopM from '../images/bg-curvy-mobile.svg';

import Button from './Button.astro';
---

<div class='flex flex-col items-center'>
  <Image src={HeroImage} alt={'hero'} class={'px-8'} />
  <h1
    class='text-2xl sm:text-4xl mt-8 text-center relative top-6 z-10 px-8 md:w-4/5 lg:w-1/2'
  >
    All your files in one secure location, accessible anywhere.
  </h1>
  <div
    class='text-center relative pb-8 sm:text-lg md:w-2/3 lg:w-[37%] bg-[--clr-blue-02] sm:bg-transparent'
  >
    <Image
      src={BgTopM}
      alt={''}
      class={'absolute -top-[8.5rem] w-full h-[141px] -z-50 sm:hidden'}
      width={375}
    />
    <p class='px-8 pt-12 mb-8'>
      Fylo stores all your most important files in one secure location. Access
      them wherever you need, share and collaborate with friends family, and
      co-workers.
    </p>
    <Button text='Get Started' />
  </div>
</div>
