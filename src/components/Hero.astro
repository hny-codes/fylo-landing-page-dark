---
import { Image } from 'astro:assets';
import HeroImage from '../images/illustration-intro.png';
import BgTopM from '../images/bg-curvy-mobile.svg';
import BgTopD from '../images/bg-curvy-desktop.svg';
import Button from './Button.astro';
---

<div class='flex flex-col items-center'>
  <Image src={HeroImage} alt={'Hero Image'} class={'px-8'} />
  <h1 class='text-2xl mt-8 text-center relative top-6 z-10 px-8'>
    All your files in one secure location, accessible anywhere.
  </h1>
  <div class='text-center relative bg-[--clr-blue-02] pb-8'>
    <Image
      src={BgTopM}
      alt={''}
      class={'absolute -top-[8.5rem] w-full h-[141px] -z-50'}
      width={375}
    />
    <p class='px-8 pt-12 mb-8'>
      Fylo stores all your most important files in one secure location. Access
      them wherever you need, share and collaborate with friends family, and
      co-workers.
    </p>
    <Button text='Get Started' />
  </div>
</div>
