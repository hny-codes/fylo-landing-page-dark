---
import { Image } from 'astro:assets';

type Props = {
  img: ImageMetadata;
  imgAlt: string;
  title: string;
  desc: string;
};

const { img, imgAlt, title, desc }: Props = Astro.props;
---

<div class='flex flex-col items-center text-center sm:justify-between'>
  <Image src={img} alt={imgAlt} class='max-w-16 sm:max-w-full ' />
  <h2 class='pt-8 pb-2 sm:text-xl'>{title}</h2>
  <p class="sm:w-[59%] text-[--font-body]">{desc}</p>
</div>
