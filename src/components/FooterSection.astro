---
import { Image } from 'astro:assets';
import Logo from '../images/logo.svg';
import LocationIcon from '../images/icon-location.svg';
import PhoneIcon from '../images/icon-phone.svg';
import MailIcon from '../images/icon-email.svg';
---

<footer class='bg-[--clr-blue-03]'>
  <div class='px-8 pt-64 pb-10 max-w-[--max-width] lg:mx-auto'>
    <Image
      src={Logo}
      alt={'Fylo Logo'}
      class={'mb-10 w-[55%] translate-x-3 sm:w-fit md:translate-x-0'}
    />
    <div class='flex flex-col justify-between gap-6 md:flex-row md:gap-10'>
      <div class='flex gap-6 md:w-1/4'>
        <Image
          src={LocationIcon}
          alt={'Location Icon'}
          class={'h-full md:h-fit pt-1 '}
        />
        <p>
          Lorem ipsum door sit amet, consectetur adipiscing elit, sed do eiusmod
          tempor incididunt ut labore et dolore magna aliqua
        </p>
      </div>
      <div class='flex flex-col gap-6 mb-10 sm:flex-row md:flex-col md:mb-0 lg:mr-24'>
        <div class='flex gap-6'>
          <Image
            src={PhoneIcon}
            alt={'Location Icon'}
            class={'h-full md:h-fit pt-1'}
          />
          <p>+1-543-123-4567</p>
        </div>
        <div class='flex gap-6'>
          <Image
            src={MailIcon}
            alt={'Location Icon'}
            class={'h-full md:h-fit pt-1'}
          />
          <p>example@fylo.com</p>
        </div>
      </div>
      <div class='flex flex-col gap-3 mb-8 md:mb-0'>
        <a href='/' class='footer-link' title='About Us'>About Us</a>
